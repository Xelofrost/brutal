---
interface Props {
  pubDate: Date;
  author: string;
}

const { pubDate, author } = Astro.props;
---

<article class='prose-slate w-sm md:w-prose md:prose poppins'>
  <a href='/blog/' title='Vuelta al blog'>&larr; Vuelta al blog</a>
  <p class='text-slate text-sm md:text-base'>
    Publicado en {pubDate} por {author}
  </p>
  <slot />
  <p class='text-slate'>Escrito por {author}</p>
  <a href='/blog/' title='Vuelta al blog'>&larr; Vuelta al blog</a>
</article>
